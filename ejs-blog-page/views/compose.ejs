            <!-- Title box  -->
            <label for="Title">Title</label>
            <input class="form-control" type="text" name="postTitle"><br>
        
            <!-- Post box -->
            <label for="Post">Post</label>
            <textarea class="form-control" name="postBody"  cols="150" rows="5"></textarea>
        
        
        </div>

        <!-- Submit button -->
